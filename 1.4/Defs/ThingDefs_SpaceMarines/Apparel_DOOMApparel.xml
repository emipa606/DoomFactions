<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ===============Bottom Layer============== -->
  <!--Praetor Suit-->
  <ThingDef ParentName="DOOMArmorMakeableBase">
    <defName>Apparel_DOOMPraetorSuit</defName>
    <label>Praetor suit</label>
    <description>D22 Model, gives the user superhuman abilities. Excellent for traveling to Hell and back or surviving years of irrelevance with mods.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>SpaceMarineThings/Apparel/Display/Praetor2016</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
    </recipeMaker>
    <costList>
      <ComponentIndustrial>25</ComponentIndustrial>
      <Plasteel>120</Plasteel>
    </costList>
    <thingCategories>
      <li>Apparel</li>
      <li>DOOM_Armor</li>
    </thingCategories>
    <statBases>
      <Mass>4</Mass>
      <MaxHitPoints>420</MaxHitPoints>
      <WorkToMake>42000</WorkToMake>
      <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.72</ArmorRating_Sharp>
      <ArmorRating_Heat>0.65</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>40</Insulation_Heat>
    </statBases>
    <generateCommonality>0.3</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Hands</li>
        <li>Arms</li>
        <li>Waist</li>
        <li>Legs</li>
        <li>Feet</li>
      </bodyPartGroups>
      <wornGraphicPath>SpaceMarineThings/Apparel/Praetor2016</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>DOOMSuit</li>
        <li>PrestigeCombatGear</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <equippedStatOffsets>
      <MoveSpeed>1</MoveSpeed>
      <MeleeHitChance>1</MeleeHitChance>
      <MeleeDodgeChance>1</MeleeDodgeChance>
      <MedicalTendQualityOffset>0.25</MedicalTendQualityOffset>
      <AimingDelayFactor>-0.10</AimingDelayFactor>
      <ShootingAccuracyPawn>0.10</ShootingAccuracyPawn>
      <MentalBreakThreshold>-0.07</MentalBreakThreshold>
      <WorkSpeedGlobal>1</WorkSpeedGlobal>
    </equippedStatOffsets>
  </ThingDef>
